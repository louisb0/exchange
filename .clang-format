BasedOnStyle: LLVM
IndentWidth: 4
ColumnLimit: 100
AccessModifierOffset: -4

SortIncludes: CaseInsensitive
IncludeBlocks: Regroup
IncludeCategories:
  - Regex: '^"common\.hpp"'
    Priority: 1
    SortPriority: 1
    CaseSensitive: false

  - Regex: '^".*\.hpp?"'
    Priority: 2
    SortPriority: 2
    CaseSensitive: false

  - Regex: '.*'
    Priority: 3
    SortPriority: 3
    CaseSensitive: false
